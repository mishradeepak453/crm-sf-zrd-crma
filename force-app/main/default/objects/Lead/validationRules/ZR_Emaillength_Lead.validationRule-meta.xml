<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ZR_Emaillength_Lead</fullName>
    <active>true</active>
    <description>SF-130 This validation rule should enforce a field lengths of maximum 60 characters for this Email-field.</description>
    <errorConditionFormula>LEN(Email)&gt;= 60
&amp;&amp;  $Permission.Core_Lead_Bypass_Validation_Rules = FALSE</errorConditionFormula>
    <errorDisplayField>Email</errorDisplayField>
    <errorMessage>Please enter less than 60 characters.</errorMessage>
</ValidationRule>
